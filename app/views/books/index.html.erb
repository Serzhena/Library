<p id="notice"><%= notice %></p>

<h5>Список книг</h5>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Автор</th>
      <th>Год издания</th>
      <th>Издательство</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.publishingyear %></td>
        <td><%= book.publishinghouse %></td>
        <!--<td><%= link_to 'Карточка', book %></td>-->
        <td><span class="badge badge-pill badge-success"><%= link_to 'Карточка', book %></span></td>
        <!-- <td><%= link_to 'Редактировать', edit_book_path(book) %></td>-->
       <td><span class="badge badge-pill badge-warning"><%= link_to 'Редактировать', edit_book_path(book) %></span></td>
       <!-- <td><%= link_to 'Удалить', book, method: :delete, data: { confirm: 'Вы уверены?' } %></td>-->
        <td><span class= "badge badge-pill badge-danger"><%= link_to 'Удалить', book, method: :delete, data: { confirm: 'Вы уверены?' } %></span></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-success"><%= link_to 'Создать новую', new_book_path %></button>